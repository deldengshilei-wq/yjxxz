[1,0,0,[["cc.JsonAsset",["_name","json"],1]],[[0,0,1,3]],[[0,"guide",[{"type":1,"step":1,"style":2,"tips":"","character":"苏倾雨","icon":"hero_02","direction":1,"description":"大师兄，如今世道混乱，天灾人祸，民不聊生，师父命我们五人下山。师兄，师父让我们联合山下其它门派一起帮助民众抵抗邪恶势力。","offset":0,"finger":0,"continue":1},{"type":1,"step":2,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"君王昏庸无道，官府腐败盛行，百姓苦不堪言。倾雨师弟，我们身负天剑门绝学，带着昆仑山的荣誉与使命，我们这就下山出发，用我们一身本领去拯救受苦受难的民众。","offset":0,"finger":0,"continue":1},{"type":1,"step":3,"style":2,"tips":"","character":"楚梦璃","icon":"hero_03","direction":1,"description":"大师兄，虽然现在拯救百姓刻不容缓，但是，我们还是需要为下山做一些准备。首先，我们要联合其它门派一起行动。","offset":0,"finger":0,"continue":0},{"type":2,"step":1,"style":1,"tips":"点击门派","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":2,"step":2,"style":2,"tips":"","character":"楚梦璃","icon":"hero_03","direction":1,"description":"我们目前可以联合的门派有，玄天宗、唐影门、药王谷、缥缈宫，玄天宗外家功力浑厚以近战为主，唐影门擅长使用弓箭，药王谷的弟子以药理为主擅使治疗之术，缥缈宫以内家功夫为主，门派弟子等级越高，伤害能力越强。","offset":0,"finger":0,"continue":1},{"type":2,"step":3,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":1,"description":"那我们还等什么呢，叫上各门派师兄弟们一起去惩恶扬善吧。我们先去找玄天宗的师兄弟们。","offset":0,"finger":0,"continue":0},{"type":3,"step":1,"style":1,"tips":"点击闯关","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":3,"step":2,"style":2,"tips":"","character":"楚梦璃","icon":"hero_03","direction":1,"description":"大师兄，我们已经和玄天宗联系了，他们已经来到我们昆仑山了，在我们门派山门了。我们一起去见见他们吧。","offset":0,"finger":0,"continue":0},{"type":3,"step":3,"style":1,"tips":"点击布阵","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":3,"step":4,"style":1,"tips":"选择伙伴","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":3,"step":5,"style":1,"tips":"保存布阵","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":4,"step":1,"style":2,"tips":"","character":"楚梦璃","icon":"hero_03","direction":1,"description":"师兄，咱们昆仑山角有一伙草寇在骚扰路过的商队，他们正在抢夺商队的财物。师兄商队他们已经被草寇围堵了，我们快去帮助下这个商队吧。","offset":0,"finger":0,"continue":1},{"type":4,"step":2,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"梦璃师妹，我先行一步，我先去会会这个草寇头领。","offset":0,"finger":0,"continue":0},{"type":4,"step":3,"style":1,"tips":"选择章节","character":"","icon":"","direction":0,"description":"","offset":0,"finger":1,"continue":0},{"type":4,"step":4,"style":3,"tips":"挑战关卡","character":"楚梦璃","icon":"hero_03","direction":1,"description":"让我们开始吧","offset":-120,"finger":1,"continue":0},{"type":5,"step":1,"style":3,"tips":"点击出战","character":"肖震岚","icon":"hero_01","direction":-1,"description":"走玄天宗的师兄弟们，我们先去会会这些个草寇们。不然，他们就拉着财物跑走了！咱们快一起先去探探路。","offset":0,"finger":0,"continue":0},{"type":5,"step":2,"style":2,"tips":"","character":"刀客草寇头目","icon":"boss_01","direction":1,"description":"快，快，快！兄弟们快把商队的这些箱子搬到我们的马车上面。\n咦，尔等是谁，竟然敢破坏我们的好事？\n兄弟们，放下手里的东西，抄家伙，给他们点颜色看看。","offset":0,"finger":0,"continue":0},{"type":5,"step":3,"style":2,"tips":"","character":"刀客草寇头目","icon":"boss_01","direction":1,"description":"一帮酒囊饭袋，你们都没吃饭吗？一群蝼蚁而已，这都拦不住？还需要我亲自出手除去，看我这一招破了他们！","offset":0,"finger":0,"continue":0},{"type":5,"step":4,"style":3,"tips":"释放技能","character":"肖震岚","icon":"hero_01","direction":-1,"description":"多谢你这一破招，我积累了那么多了，现在我的能力值满了，可以释放大招了。\n哈哈哈哈哈！\n草寇们来看看我的绝技吧！","offset":0,"finger":1,"continue":0},{"type":5,"step":5,"style":2,"tips":"","character":"刀客草寇头目","icon":"boss_01","direction":1,"description":"好的，昆仑山天剑门的嘛？好的，好的，好的，我记住你们了，你们坏了我们草寇的好事，我的同伙会找你报仇的，我们会回来找你们的！一定会回来找他们的，你们给我等着吧！","offset":0,"finger":0,"continue":0},{"type":6,"step":1,"style":2,"tips":"","character":"法师草寇头目","icon":"boss_02","direction":1,"description":"你们是昆仑山天剑门的嘛？就是你们欺负我弟弟了，是吗？你们很闲嘛？需要你们来管我们的闲事吗？让你们多管闲事，来吧！让你们看看你们大姐大的厉害！兄弟们，抄起家伙，让他们看看我们的厉害。去吧，揍他们！","offset":0,"finger":0,"continue":1},{"type":6,"step":2,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"你们是一伙的嘛？这个世界上还是需要正义的，不要以为你们仗着人多，就可以仗势欺压百姓。随我们去伏法，不要在迫害百姓了。看我以昆仑山绝技来破你们的招！看招！","offset":0,"finger":0,"continue":0},{"type":6,"step":3,"style":2,"tips":"","character":"法师草寇头目","icon":"boss_02","direction":1,"description":"你们就非要多管闲事吗？昆仑山天门门，算你们厉害，我回去找厉害的人来对付你们！你们给我等着！我去去就来！","offset":0,"finger":0,"continue":0},{"type":7,"step":1,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"你们是之前那伙草寇的同伴吧！这次来了一个厉害的嘛！不要以为你们人多就可以为所欲为！你们叫什么？","offset":0,"finger":0,"continue":1},{"type":7,"step":2,"style":2,"tips":"","character":"药师草寇头目","icon":"boss_03","direction":1,"description":"我们叫什么不重要，重要的是可以击败你！我的两位同伴是被你们击败的吧！他们的仇，由我来报！看招吧！","offset":0,"finger":0,"continue":0},{"type":7,"step":3,"style":2,"tips":"","character":"药师草寇头目","icon":"boss_03","direction":1,"description":"这不可能，你们怎么可以这么厉害！你们比传闻中的要厉害的多！昆仑山天剑门我记住你们了，我们会继续来找你们的！你们等着吧！","offset":0,"finger":0,"continue":0},{"type":8,"step":1,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"哈哈哈，你们又来了嘛？早就知道你们明的不行，就会来暗的，想暗算我，没那么容易！这样省着我们去找你们了，我们天剑门就是为了行侠仗义，你们早些认识到自己的问题，快点随我们去天剑门伏法。看招！","offset":0,"finger":0,"continue":1},{"type":8,"step":2,"style":2,"tips":"","character":"刀客草寇头目","icon":"boss_01","direction":1,"description":"我的几位同伴都是你们打败的吧！我们草寇帮，做的事情不需要你们来指导！想让我们去昆仑山伏法？不可能的！什么为了民众，什么行侠仗义，在我来看都是你们的一厢情愿，我们就做草寇，你们又怎么样呢？我现在就看看你们有多么的厉害！","offset":0,"finger":0,"continue":0},{"type":8,"step":3,"style":2,"tips":"","character":"刀客草寇头目","icon":"boss_01","direction":1,"description":"昆仑山天剑门，汝等为何如此厉害。我们草寇帮数次受到你们的重创，我也受了重伤。你们有胆量来我们草寇帮的大本营嘛？我们老大会给你们教训的。啊啊啊啊啊！别打了！在下告辞！","offset":0,"finger":0,"continue":0},{"type":9,"step":1,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"师兄弟师姐妹们，我们走了很多路，终于找到草寇帮了。我们去剿了这群草寇吧！他们一直为祸百姓，强抢民众财产！我们一起去找他们随我们去昆仑山伏法！叫你们首领出来！随我们去昆仑山！","offset":0,"finger":0,"continue":1},{"type":9,"step":2,"style":2,"tips":"","character":"法师草寇头目","icon":"boss_02","direction":1,"description":"你们终于来了，就是你们屡次破坏我们的好事对吧。我先来会会你，你还不配让我们首领出来，让你们知道我们草寇帮的厉害。我要看看屡次重创我们草寇帮的一群人有多么的厉害，看我的内功心法，看招。","offset":0,"finger":0,"continue":0},{"type":9,"step":3,"style":2,"tips":"","character":"法师草寇头目","icon":"boss_02","direction":1,"description":"首领，对不起！我的武艺不行，没有将他们赶走。让你失望了！首领，让我在带一对人马去会会他们！","offset":0,"finger":0,"continue":1},{"type":9,"step":4,"style":2,"tips":"","character":"神秘战士首领","icon":"boss_04","direction":1,"description":"不用了，退下吧！看来我的许久没有露面，江湖上都快忘记我的存在了。我亲自去会会他们。","offset":0,"finger":0,"continue":0},{"type":10,"step":1,"style":2,"tips":"","character":"神秘战士首领","icon":"boss_04","direction":1,"description":"昆仑山天剑门，呵呵，一群乌合之众。就是你们一直在坏我们的好事是吧！我倒是要看看你们有多么的厉害。来吧！","offset":0,"finger":0,"continue":1},{"type":10,"step":2,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"是你们草寇帮一直在仗势欺压百姓，我们只是行侠仗义。快随我们去昆仑山伏法，不要在执迷不悟了。","offset":0,"finger":0,"continue":0},{"type":10,"step":3,"style":2,"tips":"","character":"神秘战士首领","icon":"boss_04","direction":1,"description":"你们等着，我会卷土重来的！","offset":0,"finger":0,"continue":1},{"type":10,"step":4,"style":2,"tips":"","character":"楚梦璃","icon":"hero_03","direction":-1,"description":"师兄，他们只是被赶跑了，或许有一天他们真的会回来。这个天下还需要我们去拯救。但是这一片百姓得到了安宁！成了短暂的净土！","offset":0,"finger":0,"continue":1},{"type":10,"step":5,"style":2,"tips":"","character":"肖震岚","icon":"hero_01","direction":-1,"description":"是啊！但是，我们的路还很长！走吧，继续我们的行侠仗义之路！","offset":0,"finger":0,"continue":0}]]],0,0,[],[],[]]
